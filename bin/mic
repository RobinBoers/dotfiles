#!/bin/sh

mic_mode() {
  pactl set-source-mute @DEFAULT_SOURCE@ $1
}

show_help() {
  echo "Usage: $0 <mute/unmute/toggle>"
  echo
}

case ${1:-0} in
  -h|--help)
     show_help 
    ;;
  mute)
    mic_mode 1
    ;;
  unmute)
    mic_mode 0
    ;;
  toggle)
    mic_mode toggle
    ;;
  *)
    show_help
    exit 1
    ;;
esac

