#!/bin/sh
# Shamelessly stolen from Drew DeVault
# https://git.sr.ht/~sircmpwn/dotfiles/tree/master/item/bin/xdg-open

targ=$1
scheme=$(echo $targ | cut -d: -f1)

bymime() {
  case "$1" in
    application/pdf)
      exec $BROWSER $targ
      ;;
    image/svg+xml)
      exec $BROWSER $targ
      ;;
    image/*)
      exec $VIEWER $targ
      ;;
    *openxml*)
      exec $OFFICE $targ
      ;;
    *)
      echo "Don't know how to open $targ"
      exit 1
      ;;
  esac
}

case "$scheme" in
  http)
    exec $BROWSER $targ
    ;;
  https)
    exec $BROWSER $targ
    ;;
  mailto)
    exec $MAIL $targ
    ;;
  *)
    bymime $(file --mime-type $targ | cut -d' ' -f2)
esac

