#!/bin/sh -eu
# Wrapper around sudoedit, opens the given file with
# $EDITOR if writable, or sudoedit if not.

if [ -z "${1:-}" ]; then
  $EDITOR
  exit 0
fi

edit() {
  if [ -w "$1" ]; then
    $EDITOR "$1"
  else
	  sudoedit "$1"
  fi
}

create() {
  if [ -w "$(dirname "$1")" ]; then
    touch "$1"
  else
    sudo touch "$1"
  fi
}

if [ -e "$1" ]; then
  if [ -f "$1" ]; then
    edit "$1"
  else
    err "not a file."
  fi
else
  echo "File does not exist (yet)."
  if prompt -y "Create it?"; then
    create "$1"
    edit "$1"
  fi
fi

