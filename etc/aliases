case "$(uname)" in
  Darwin)
    alias gimme="brew install"
    alias yeet="brew uninstall"
    alias voom="brew update && brew upgrade"
    ;;

  Linux)
    alias gimme="doas apk add"
    alias yeet="doas apk del"
    alias voom="doas apk -U upgrade"
    ;;
esac

# Remember to ask nicely
alias pls='doas $(history -p !!)'
alias fuck="pls"

if ! has e; then
  alias e="$EDITOR"
fi

if [ "$(uname)" != "Darwin" ]; then
  alias open="xdg-open"
fi

# Options
alias cat="bat --paging=never --style=plain --color=auto"
alias feh="feh -Z --scale-down"
alias less="less -QFr"
alias code="code --password-store='gnome-libsecret'" # Make VSCode work in WM

CLAUDE_PERSONAS=$XDG_DATA_HOME/claude

function claude() {
  local personas=()

  for persona in $CLAUDE_PERSONAS/*/; do
    [ -d $persona ] || continue
    personas+=($(basename $persona))
  done

  selected=$(printf "%s\n" ${personas[@]} | gum choose --header "Choose Claude profile")

  if [ -n "$selected" ]; then
    export CLAUDE_CONFIG_DIR=$CLAUDE_PERSONAS/$selected
    $CLAUDE_PERSONAS/$selected/local/claude
  fi
}

for persona in $CLAUDE_PERSONAS/*/; do
  [ -d $persona ] || continue
  name=$(basename $persona)
  alias "$name"="CLAUDE_CONFIG_DIR=$CLAUDE_PERSONAS/$name $CLAUDE_PERSONAS/$name/local/claude"
done

# File management
