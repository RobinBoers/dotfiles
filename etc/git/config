[core]
hooksPath = ~/etc/git/hooks
excludesFile = ~/etc/git/ignore

[init]
defaultBranch = trunk

[user]
name = Robin
email = robindev2019@outlook.com
signingKey = B1181BC2D8530F64

[commit]
gpgSign = true
verbose = true

[tag]
gpgSign = true

[pull]
rebase = true

[push]
autoSetupRemote = true
followtags = true

[submodule]
recurse = true

[fetch]
prune = true

[branch]
sort = -committerdate

[diff]
algorithm = histogram
submodule = log
tool = difft

[alias]
st = status
br = branch --column
co = checkout
cp = cherry-pick
fl = push --force-with-lease
rh = reset HEAD^
aa = add -A
af = !git commit --amend --no-edit && git fl
wt = !phantom
cw = !phantom shell

# Use options by default
blame = -w -C -C -C
stash = stash --all -u

# More logical names
stage = add
unstage = restore --staged
amend = commit --amend --no-edit
fuck = reset --hard

# Remove branches that have been deleted on the remote
pr =! git fetch --all --prune && git branch -vv | grep '\\(origin\\|fork\\|src\\)/.*: gone]' | awk '{print $1}' | xargs git branch -D
rmbr = branch -D

# Fancy logs
h = log --graph --date=default-local --pretty=format:'%C(yellow)%h%C(reset) %C(green)%cd%C(reset) %C(blue)%an%C(reset)%C(red)%d%C(reset) %s'
ha = h --all

# Ignoring/excluding files
ignore = "!echo \"$1\" >> .gitignore #"
exclude = "!echo \"$1\" >> .git/info/exclude #"

[rerere]
enabled = true

# Push over SSH for gh repos cloned over HTTP(S)
[url "git@github.com:"]
pushInsteadOf = https://github.com
pushInsteadOf = http://github.com

# Push over SSH for du repos cloned over HTTP(s)
#[url "gitwastaken@dupunkto.org:"]
#pushInsteadOf = https://git.dupunkto.org
#pushInsteadOf = http://git.dupunkto.org
#pushInsteadOf = https://git.dupunkto.org/~
#pushInsteadOf = http://git.dupunkto.org/~

# Avoid data corruption
[transfer]
fsckobjects = true
[fetch]
fsckobjects = true
[receive]
fsckobjects = true

[credential "https://github.com"]
helper = 
helper = !/usr/bin/env -S gh auth git-credential

[credential "https://gist.github.com"]
helper = 
helper = !/usr/bin/env -S gh auth git-credential

# Handle LFS properly
[filter "lfs"]
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
process = git-lfs filter-process
required = true
