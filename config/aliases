# Replacements
alias cat="bat --paging=never --style=plain --color=auto"
alias vim="nvim"
alias sudo="doas"
alias sudoedit="doas $EDITOR"

# Emerge
alias gimme="doas emerge --ask --verbose"

# Options
alias feh="feh -Z --scale-down"
alias less="less -QFr"
alias rm="rm -r" # Allow to remove directories
alias cp="cp -i" # Warn before overwriting existing files
alias mv="mv -i" # "

# ls shortcodes
alias ls="ls -G --group-directories-first --color=always"
alias la="ls -A"
alias ll="ls -l"

# Niceities
alias ..="cd .."
alias e="$EDITOR"

# I don't particularly like vi but this is muscle memory
alias :q="exit"

# Secrets
alias secrets="git --git-dir=$HOME/.secrets/ --work-tree=$HOME"
alias lsecrets="lazygit --git-dir=$HOME/.secrets/ --work-tree=$HOME"

# Downloading and uploading files
alias dl="curl -O -C -"
alias vdl="yt-dlp" # v for video
alias mdl="spotdl" # m for music
alias rdl="rsync -P -av" # r for rsync
alias upl="curl -T"
alias rupl="rsync -P -av --delete --exclude .git" # r for rsync (again)

# CURL apps
alias ipinfo="curl icanhazip.com"
alias transfer="curl https://transfer.sh --upload-file"

qr() { curl qrenco.de/"$1"; }
weather() { curl wttr.in/"$1"; }
tldr() { curl cheat.sh/"$1"; }

# Why install it if I can run it like this?
alias fetch="curl -sL https://raw.githubusercontent.com/dylanaraps/neofetch/master/neofetch | bash"

# Tell various programs to respect the XDG specification
alias ssh="ssh -F $XDG_CONFIG_HOME/ssh/config"
alias wget="wget --hsts-file=$XDG_DATA_HOME/wget-hsts"

