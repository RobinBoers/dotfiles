set $mod Mod4
set $term alacritty
set $wallpaper ~/pictures/wallpaper.jpg

input "*" {
  xkb_layout us
  xkb_variant intl
}

input "type:touchpad" {
  dwt disabled
  middle_emulation enabled
  natural_scroll enabled
  tap enabled
}

# Start Rofi when pressing the Super key, because that is how it 
# works on Windows and that is how my workflow works :)
bindcode --release 133 exec rofi -show drun

# Launch terminal
bindsym Mod1+Return exec $term

# Close window
bindsym $mod+q kill

smart_gaps on
smart_borders no_gaps

# Shortcuts

# WM controls
bindsym F11 fullscreen toggle
bindsym $mod+t layout tabbed

bindsym Control+Mod1+r reload
bindsym Control+Mod1+q exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

# Screen locking
bindsym $mod+l exec lock $wallpaper 
bindsym $mod+Shift+s exec screenshot

exec swayidle -w \
  timeout 300 lock $wallpaper \
	timeout 600 swaymsg "output * dpms off" \
	resume 'swaymsg "output * dpms on"' 

# Floating mode
floating_modifier $mod
bindsym $mod+f floating toggle
bindsym $mod+j minimize toggle

# Focus
focus_wrapping workspace
focus_follows_mouse

bindsym Mod1+Tab workspace back_and_forth
bindsym $mod+Tab workspace back_and_forth
bindsym Mod1+Control+Left workspace prev
bindsym Mod1+Control+Right workspace next

bindsym $mod+Down focus down
bindsym $mod+Left focus left
bindsym $mod+Right focus right
bindsym $mod+Up focus up

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Window resizing
bindsym $mod+Control+Down resize shrink height 10 px or 10 ppt
bindsym $mod+Control+Left resize grow width 10 px or 10 ppt
bindsym $mod+Control+Right resize shrink width 10 px or 10 ppt
bindsym $mod+Control+Up resize grow height 10 px or 10 ppt

# Move windows
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Right move right
bindsym $mod+Shift+Up move up

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# Volume controls
# (with Wob)

set $WOBSOCK $XDG_RUNTIME_DIR/wob.sock
exec rm -f $WOBSOCK && mkfifo $WOBSOCK && tail -f $WOBSOCK | wob

bindsym --locked XF86AudioRaiseVolume    exec pactl set-sink-volume @DEFAULT_SINK@ +5% && pactl get-sink-volume @DEFAULT_SINK@ | head -n 1 | awk '{print substr($5, 1, length($5)-1)}' > $WOBSOCK
bindsym --locked XF86AudioLowerVolume    exec pactl set-sink-volume @DEFAULT_SINK@ -5% && pactl get-sink-volume @DEFAULT_SINK@ | head -n 1 | awk '{print substr($5, 1, length($5)-1)}' > $WOBSOCK
bindsym --locked XF86AudioMute           exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym --locked XF86AudioMicMute        exec pactl set-source-mute @DEFAULT_SOURCE@ toggle 

# Media control 
bindsym --locked $mod+p                  exec playerctl play-pause
bindsym --locked $mod+less               exec playerctl previous
bindsym --locked $mod+greater            exec playerctl next

bindsym --locked XF86AudioPlay           exec playerctl play-pause
bindsym --locked XF86AudioPause          exec playerctl pause
bindsym --locked XF86AudioNext           exec playerctl next
bindsym --locked XF86AudioPrev           exec playerctl previous

